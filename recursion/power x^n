https://leetcode.com/problems/powx-n/description/

class Solution {
    public static double mypow(double x , int n){
        long N= n ;
        if(n<0){
            x= 1/x;
            N=-n;
        }
        return solve(x , N);
    }
    public static double solve(double x , long N) {
       if(N==0) return 1.0;
       double half = solve(x , N/2);
       if(N%2==0){
        return half*half;
       }
       else{
        return half*half*x;
       }
    }
    public double myPow(double x, int n) {
       return mypow(x , n);
    }
}
